<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:fitsSystemWindows="true"
    tools:context=".Activity.StoreLocationActivity"
    tools:showIn="@layout/activity_store_location"
    android:background="@drawable/appback"
    android:id="@+id/background"
    >
    <!--android:background="#EAD2AC">-->

    <EditText
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:hint="Type in item's name"
        android:singleLine="true"
        android:textColor="#d00d0c0c"
        android:ems="10"
        android:textSize="17sp"
        android:textStyle="bold"
        android:id="@+id/ItemText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="textCapSentences"/>

    <EditText
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:id="@+id/CatText"
        android:hint="Type in a new category"
        android:singleLine="true"
        android:ems="10"
        android:textSize="17sp"
        android:layout_below="@+id/spinner"
        android:layout_alignParentLeft="true"
        android:textColor="#d00e0e0e"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:inputType="textCapSentences"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Item Location"
        android:textSize="17sp"
        android:textColor="#354950"
        android:id="@+id/textView"
        android:layout_below="@+id/CatText"
        android:layout_centerHorizontal="true"/>


    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/CameraButton"
        android:src="@drawable/camera"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/TextButton"
        android:layout_toLeftOf="@id/TextButton"
        android:layout_marginRight="30dp"/>
        <!--android:layout_alignLeft="@+id/LocationText"
        android:layout_alignStart="@+id/LocationText"-->

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/camera"
        android:id="@+id/ItemImageView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/LocationText"/>


    <ImageButton
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:id="@+id/AudioButton"
        android:src="@drawable/soundwave"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@id/TextButton"
        android:layout_marginLeft="30dp"/>




    <ImageButton
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:id="@+id/TextButton"
        android:src="@drawable/text"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/AudioButton"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/LocationText"
        android:hint="Type in item's location"
        android:singleLine="true"
        android:textSize="17sp"
        android:textColor="#d00e0e0e"
        android:textStyle="bold"
        android:layout_below="@+id/CameraButton"
        android:inputType="textCapSentences"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:textSize="15sp"
        android:id="@+id/AddButton"
        android:layout_below="@+id/ItemImageView"
        android:layout_alignParentRight="true"/>

    <Spinner
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/ItemText"
        android:layout_marginTop="45dp"
        android:textSize="17sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/playButton"
        android:onClick="playAudio"
        android:layout_alignLeft="@+id/CameraButton"
        android:layout_alignStart="@id/CameraButton"
        android:layout_below="@id/CameraButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record"
        android:id="@+id/recordButton"
        android:onClick="recordAudio"
        android:layout_alignTop="@+id/playButton"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stopButton"
        android:onClick="stopAudio"
        android:layout_below="@+id/AudioButton"
        android:layout_alignRight="@+id/AudioButton"
        android:layout_alignEnd="@+id/AudioButton" />


</RelativeLayout>
</ScrollView>