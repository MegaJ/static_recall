<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="yiwejeje.staticrecallapp.StoreLocationActivity"
    tools:showIn="@layout/activity_store_location"
    android:background="#90afc5">
    <!--android:background="#EAD2AC">-->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Item Title"
        android:textColor="#d00d0c0c"
        android:ems="10"
        android:textSize="40sp"
        android:textStyle="bold"
        android:id="@+id/ItemText"
        android:layout_marginTop="108dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!--android:textColor="#4281A4"-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:text="Location"
        android:textSize="35sp"
        android:textColor="#354950"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_marginTop="147dp"
        android:layout_below="@+id/ItemText"
        android:layout_alignRight="@+id/TextButton"
        android:layout_alignEnd="@+id/TextButton" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/CameraButton"
        android:src="@drawable/camera"
        android:scaleType="fitXY"
        android:layout_below="@+id/textView"
        android:layout_alignTop="@+id/TextButton"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:id="@+id/AudioButton"
        android:src="@drawable/soundwave"
        android:layout_alignTop="@+id/TextButton"
        android:layout_alignRight="@+id/CatText"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/CatText" />

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:id="@+id/TextButton"
        android:src="@drawable/text"
        android:layout_centerVertical="true"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/LocationText"
        android:hint="Type in Location Here"
        android:textSize="35sp"
        android:textColor="#d00e0e0e"
        android:textStyle="bold"
        android:layout_below="@+id/CameraButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CatText"
        android:hint="Add Category Tags "
        android:ems="10"
        android:textSize="40sp"
        android:layout_below="@+id/ItemText"
        android:layout_alignParentLeft="true"
        android:textColor="#d00e0e0e"
        android:textStyle="bold"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:textSize="40sp"
        android:background="#fb5a5a"
        android:textColor="#dddddf"
        android:textStyle="bold"
        android:id="@+id/AddButton"
        android:layout_marginTop="57dp"
        android:layout_below="@id/LocationText"
        android:layout_alignLeft="@+id/TextButton"
        android:layout_alignStart="@+id/TextButton" />


</RelativeLayout>
