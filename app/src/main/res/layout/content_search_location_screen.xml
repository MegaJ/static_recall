<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.SearchLocationScreen"
    tools:showIn="@layout/activity_search_location_screen"
    android:background="@drawable/appback">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Information about this item:"
        android:textSize="35sp"
        android:textColor="#354950"
        android:textStyle="bold"
        android:id="@+id/text1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The item"
        android:textSize="35sp"
        android:id="@+id/textView2"
        android:layout_below="@+id/text1"

        android:layout_alignLeft="@+id/text1"
        android:layout_alignStart="@+id/text1"
        android:layout_marginTop="100dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="(Not Specified)"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/itemTitle"
        android:layout_below="@id/textView2"
        android:textColor="#4281A4"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Under category "
        android:textSize="35sp"
        android:id="@+id/textView4"
        android:layout_below="@+id/itemTitle"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="(Not Specified)"
        android:id="@+id/ItemCategory"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView4"
        android:textColor="#4281A4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Is stored at"
        android:id="@+id/textView6"
        android:textSize="35sp"

        android:layout_below="@+id/ItemCategory"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="(Not Specified)"
        android:id="@+id/ItemLocation"
        android:textSize="35sp"
        android:layout_below="@id/textView6"
        android:layout_centerHorizontal="true"
        android:textColor="#4281A4"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editable"
        android:id="@+id/switch1"
        android:textSize="30dp"
        android:layout_below="@id/text1"
        android:layout_marginTop="32dp"
        android:layout_toRightOf="@id/itemTitle"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Changes"
        android:id="@+id/saveBtn1"
        android:layout_below="@id/ItemLocation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"/>

</RelativeLayout>
